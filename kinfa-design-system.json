  "spacing": {
    "unit": "px",
    "scale": {
      "0": "0",
      "1": "4px",
      "2": "8px",
      "3": "12px",
      "4": "16px",
      "5": "20px",
      "6": "24px",
      "8": "32px",
      "10": "40px",
      "12": "48px",
      "16": "64px",
      "20": "80px",
      "24": "96px"
    }
  },
  "breakpoints": {
    "mobile": {
      "max": "599px",
      "description": "Mobile devices"
    },
    "tablet": {
      "min": "600px",
      "max": "999px",
      "description": "Tablet devices"
    },
    "desktop": {
      "min": "1000px",
      "description": "Desktop devices"
    }
  },
  "layout": {
    "containerWidths": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    },
    "modal": {
      "width": {
        "default": "405px",
        "large": "435px"
      },
      "minWidth": {
        "mobile": "420px"
      },
      "positioning": {
        "horizontal": "50%",
        "vertical": "50%",
        "transform": "translate(-50%, -50%)"
      }
    }
  },
  "components": {
    "header": {
      "structure": "Dual logo system with primary navigation",
      "features": [
        "Dropdown menus",
        "Search functionality",
        "Trending keywords",
        "Utility links"
      ],
      "logos": {
        "standard": "img_header_logo.png",
        "white": "img_header_logo_w.png"
      }
    },
    "navigation": {
      "type": "Hierarchical multi-level",
      "mainCategories": [
        "금융상품",
        "금융생활지원",
        "고객상담",
        "소통·참여",
        "알림·공고",
        "협약·제휴",
        "기관소개"
      ],
      "subSectionsPerCategory": "3-6 items"
    },
    "buttons": {
      "variants": {
        "primary": {
          "background": "Primary blue",
          "textColor": "White",
          "hover": "Darker blue"
        },
        "secondary": {
          "background": "White",
          "textColor": "Primary blue",
          "border": "Primary blue"
        }
      },
      "classes": [
        ".func-btn",
        ".func-btn-print",
        ".func-btn-share"
      ],
      "states": ["default", "hover", "active", "disabled"]
    },
    "cards": {
      "types": [
        {
          "name": "Product Card",
          "layout": "Carousel format",
          "elements": ["Image", "Title", "Description", "CTA"]
        },
        {
          "name": "News Card",
          "layout": "Grid format",
          "elements": ["Title", "Date", "Summary"]
        },
        {
          "name": "Service Card",
          "layout": "Icon-based",
          "elements": ["Icon", "Title", "Description", "Link"]
        }
      ]
    },
    "forms": {
      "structure": "Hidden form submission pattern",
      "inputTypes": [
        "text",
        "textarea",
        "select",
        "checkbox",
        "radio"
      ],
      "actions": [
        "/financialProduct/peopleFinancial.do"
      ]
    },
    "modal": {
      "className": ".modal-main",
      "features": [
        "Dimmed background overlay",
        "Close button",
        "Time-based visibility",
        "Cookie-based persistence"
      ],
      "width": "405px",
      "responsiveAdjustments": {
        "tablet": "min-width: 420px, centered",
        "mobile": "full-width with 16px margins"
      }
    },
    "carousel": {
      "library": "Swiper",
      "usage": [
        "Hero section",
        "Product showcase",
        "News section",
        "Banner advertisements"
      ],
      "features": [
        "Auto-play",
        "Navigation arrows",
        "Pagination dots"
      ]
    }
  },
  "contentSections": {
    "hero": {
      "headline": "행복한 금융생활을 위한 포용적 서민금융의 든든한 토대",
      "type": "Mission statement with visual background"
    },
    "news": {
      "type": "Carousel",
      "categories": ["보도자료", "공지사항"],
      "layout": "Card-based"
    },
    "products": {
      "type": "Swiper/Carousel",
      "layout": "Product cards with images"
    },
    "services": {
      "type": "Grid layout",
      "format": "Icon + Title + Description"
    },
    "banners": {
      "type": "Advertisement zone",
      "format": "Rotating carousel with timing controls"
    },
    "faq": {
      "type": "Accordion or list",
      "integration": "Links to consulting services"
    }
  },
  "footer": {
    "layout": "Multi-column",
    "sections": [
      {
        "name": "Related Agencies",
        "type": "Link list"
      },
      {
        "name": "Social Media",
        "links": ["Facebook", "YouTube", "Instagram", "Naver Blog"]
      },
      {
        "name": "Contact Information",
        "includes": "Office address"
      },
      {
        "name": "Certifications",
        "includes": "ISMS certification badge (img_footer_logo_isms.png)"
      },
      {
        "name": "Copyright",
        "type": "Legal text"
      }
    ]
  },
  "interactions": {
    "loading": {
      "indicator": "ajax_loader_blue.gif",
      "className": ".is_active",
      "message": "Loading..."
    },
    "modalToggle": {
      "className": ".active",
      "trigger": "User click or time-based"
    },
    "cookieManagement": {
      "usage": "Remember popup preferences",
      "duration": "Time-based (configurable)"
    },
    "rightClickPrevention": {
      "enabled": true,
      "purpose": "Content protection"
    }
  },
  "mobileFeatures": {
    "deepLinking": {
      "endpoint": "/m/deeplink.do",
      "purpose": "Mobile app routing"
    },
    "qrCodes": {
      "usage": [
        "App downloads",
        "Mobile web access",
        "Quick service access"
      ]
    },
    "responsiveImages": {
      "format": "Adaptive based on viewport"
    }
  },
  "specialFeatures": {
    "chat": {
      "types": [
        "Chatbot (automated)",
        "1:1 Counseling (live)"
      ]
    },
    "accessibility": {
      "features": [
        "Semantic HTML structure",
        "Keyboard navigation",
        "Screen reader support (implied)"
      ]
    },
    "security": {
      "certifications": "ISMS",
      "contentProtection": "Right-click disabled"
    }
  },
  "assets": {
    "logos": [
      "img_header_logo.png",
      "img_header_logo_w.png",
      "img_footer_logo_isms.png"
    ],
    "loaders": [
      "ajax_loader_blue.gif"
    ],
    "icons": {
      "format": "SVG and PNG",
      "usage": "Navigation, services, social media"
    }
  },
  "designPrinciples": {
    "visualHierarchy": [
      "Large hero headlines",
      "Color-coded sections",
      "Icon-based quick identification",
      "Carousel for featured content"
    ],
    "contentOrganization": [
      "Clear visual section separation",
      "Numbered/sequential layouts",
      "Related links grouping"
    ],
    "userExperience": [
      "Quick access menu",
      "Breadcrumb navigation",
      "Contextual navigation",
      "Multi-channel support (web, mobile, chat)"
    ]
  },
  "cssVariables": {
    "baseFontSize": "var(--base-font-size)",
    "defaultFontSize": "var(--default-font-size)",
    "calculation": "calc(16/var(--base-font-size)*var(--default-font-size))"
  },
  "animations": {
    "transitions": {
      "default": "300ms ease-in-out",
      "fast": "150ms ease-in-out",
      "slow": "500ms ease-in-out"
    },
    "loading": {
      "type": "Spinner/GIF animation",
      "className": ".is_active"
    }
  },
  "zIndex": {
    "modal": 1000,
    "overlay": 999,
    "header": 100,
    "dropdown": 50,
    "base": 1
  },
  "borderRadius": {
    "none": "0",
    "sm": "4px",
    "md": "8px",
    "lg": "12px",
    "xl": "16px",
    "full": "9999px"
  },
  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1)"
  }
